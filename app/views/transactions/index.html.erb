<h1>Listing transactions</h1>

<table>
  <thead>
    <tr>
      <th>Attendee</th>
      <th>Drink</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.user.name %></td>
        <td><%= transaction.product %></td>
        <td><%= transaction.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Transaction', new_transaction_path %>

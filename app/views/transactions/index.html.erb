<div class="page page-transactions">

 <div class="nav-fixed-top">
            <div class="wrapper">
                <div class="span6 logo">LOGO</div>
                <div class="span6"><a class="home btn" href="/">Home</a></div>
            </div>
        </div>

    <div class="wrapper">

        <h1>Listing transactions</h1>

        <table>
          <thead>
            <tr>
              <th>Attendee</th>
              <th>Drink</th>
              <th>Price</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @transactions.each do |transaction| %>
              <tr>

                <td>
                <% if transaction.user %>
                  <%= transaction.user.name %>
                <% else %>
                  <%= puts "unkown user"%>
                <% end %>
                </td>
                <% if transaction %>
                  <td><%= transaction.product %></td>
                  <% unless transaction.price.nil? %>
                    <td>$<%= transaction.price / 100 %></td>
                  <% end %>
                <% else%>
                  <td></td>
                  <td>Registered</td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>

        <%= link_to 'New Transaction', new_transaction_path, class: "btn btn-primary btn-large" %>

    </div>


</div>
